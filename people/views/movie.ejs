<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>WMDB</title>
        <link rel="stylesheet" href="/styles.css" />
        <!-- loading jquery -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    </head>

    <body>
        <h1>Movie Details</h1>

        <p><span class="green">tt:</span> <%= movie.tt %></p>
        <p><span class="green">Title:</span> <%= movie.title %></p>
        <p><span class="green">Release:</span> <%= movie.release %></p>
        <p><span class="green">Director:</span> <%= movie.director %></p>
        <p><span class="green">Added By:</span> <%= movie.addedby %></p>
        <p class="green">Cast: </p>
        <ul id="castlist">
            <% for(var i = 0; i < movie.cast.length; i++) {%>
                <li class="castmember">
                <span><%= movie.cast[i] %></span>
                </li>
            <% } %>
        </ul>

        <script src="/main.js"></script>
    </body>
</html>