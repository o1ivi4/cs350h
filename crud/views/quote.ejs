<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>Quote Database</title>
        <link rel="stylesheet" href="/styles.css" />
        <!-- loading jquery -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    </head>

    <body>
        <h1>Quote Details</h1>
        <form method="POST" action="/updatequote/<%= quote._id %>">
                <label for="qid">Quote Id: </label><br>
                <input type="text" id="qid" name="qid" value="<%= quote._id %>"><br>
            </div>
            <div class="field-row">
                <label for="author">Author: </label><br>
                <input type="text" id="author" name="author" value="<%= quote.name %>">
            </div>
            <div class="field-row">
                <label for="quote">Quote: </label><br>
                <input type="text" id="quote" name="quote" value="<%= quote.quote %>">
            </div>
            <br>
            <input type="submit" id="updateQuote" value="Submit">
        </form>

        <!-- <p>Id: <%= quote._id %></p>
        <p>Author: <%= quote.name %></p>
        <p>Quote: <%= quote.quote %></p> -->

        <script src="/main.js"></script>
    </body>
</html>