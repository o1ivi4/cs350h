<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>Quote Database</title>
        <link rel="stylesheet" href="/styles.css" />
        <!-- loading jquery -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    </head>

    <body>
        <section data-position="header">
            <h1>Hear Ye Hear Ye!</h1>
            <form action="/quotes" method="POST">
                <input type="text" placeholder="name" name="name" />
                <input type="text" placeholder="quote" name="quote" />
                <button type="submit">Submit</button>
            </form>
        </section>
        <br>
        
        <section data-position="search-quote">
            <div>
                <h2>Search</h2>
                <label for="query">Search all quotes:</label>
                <input type="text" id="query" name="query"><br><br>
                <button id="search-button">Search</button>
            </div>
            <div>
                <h2>Search Results</h2>
                <ul id="searchResults"></ul>
            </div>
        </section>
        <br>
        
        <section data-position="update-quote">
            <div>
                <h2>Invasion!</h2>
                <p>
                    Replace olivia's first quote.
                </p>
                <button id="update-button">Replace</button>
            </div>
        </section>
        <br>

        <section data-position="delete-quote">
            <div>
                <h2>Counterattack!</h2>
                <p>
                  Delete one of Scott's quotes! (no action if Scott has no quotes remaining)
                </p>
                <button id="delete-button">Delete</button>
            </div>
            <div id="message"></div>
        </section>
        <br>

        <section data-position="quotes">
            <h2> Quotes </h2>
            <ul class="quotes">
                <!-- Loop through quotes -->
                <% for(var i = 0; i < quotes.length; i++) {%>
                    <li class="quote">
                    <!-- Output name from the iterated quote object -->
                    <span><%= quotes[i].name %></span>:
                    <!-- Output quote from the iterated quote object -->
                    <span><%= quotes[i].quote %></span>
                    </li>
                <% } %>
            </ul>
        </section>

        <script src="/main.js"></script>
    </body>
</html>